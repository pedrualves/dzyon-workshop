  <h1>Formulario</h1>
  <h2>Registrar Novo Inscrito</h2>

  <% if(msg){ %>
    <div class="alert alert-success" role="alert"><%= msg %></div>
  <% }%>
  <% if(erro){ %>
    <div class="alert alert-info" role="alert"><%= erro %></div>
  <% }%>

          <form action="/registrar" method="post">
            <div class="row col-md-offset-1 col-md-6 col-xs-12">
              Nome: <input type="text" name="nome" class="form-control" required>
            </div>
            <div class="row"></div>
            <div class="row col-md-offset-1 col-md-6 col-xs-12">
              Email: <input type="email" name="email" class="form-control" required>
            </div>
            <div class="row"></div>
            <div class="row col-md-offset-1 col-md-6 col-xs-12">
              <input type="submit" value="Registrar" class="btn-danger">
            </div>
          </form>

          <script type="text/javascript" src="/views/jquery.min.js"></script>
          <script type="text/javascript" src="/views/bootstrap.min.js"></script>
